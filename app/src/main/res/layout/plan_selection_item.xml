<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardUseCompatPadding="true"
        android:layout_margin="8dp"
        app:cardCornerRadius="@dimen/_15sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#25DDD3D3">

            <TextView
                android:id="@+id/txt_des"
                android:layout_width="0dp"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
                android:padding="@dimen/_20sdp"
                android:background="@color/colorPrimary"
                android:text="FREE"
                android:textStyle="bold"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/txt_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/_20sdp"
                style="@style/TextAppearance.AppCompat.Headline"
                android:text="Benefits Offered"
                android:textStyle="bold"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_des" />

            <View
                android:id="@+id/myview"
                android:layout_width="0dp"
                android:layout_height="@dimen/_5sdp"
                android:background="@drawable/ic_dot"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_title"
                />

            <TextView
                android:id="@+id/txt_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/_20sdp"
                style="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
                android:text="Benefits Offered"
                android:textStyle="bold"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/myview" />

            <TextView
                android:id="@+id/txt_benefits1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/_20sdp"
                android:drawableLeft="@drawable/ic_org_circle"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/_5sdp"
                android:text="Learn Module Access"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_description" />

            <TextView
                android:id="@+id/txt_benefits2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/_20sdp"
                android:drawableLeft="@drawable/ic_org_circle"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/_5sdp"
                android:text="Live Module Access"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_benefits1"
               />

            <TextView
                android:id="@+id/txt_benefits3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/_20sdp"
                android:text="Test Module Access"
                android:drawableLeft="@drawable/ic_org_circle"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/_5sdp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_benefits2"
                />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btn_start"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:background="@drawable/btn_login"
                android:textStyle="bold"
                android:drawableRight="@drawable/ic_play"
                android:textAllCaps="false"
                android:paddingEnd="@dimen/_5sdp"
                android:text="Buy"
                android:textAlignment="viewStart"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                 />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>